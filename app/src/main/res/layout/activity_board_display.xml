<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/activityBackground"
    >

    <GridView
        android:id="@+id/board_gv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:stretchMode="columnWidth"
        android:layout_marginTop="@dimen/board_min_margin_top"
        android:layout_marginBottom="@dimen/board_min_margin_bottom"
        android:layout_marginStart="@dimen/board_min_margin_start"
        android:layout_marginEnd="@dimen/board_min_margin_end"
        android:horizontalSpacing="@dimen/board_inner_borders_thickness"
        android:verticalSpacing="@dimen/board_inner_borders_thickness"
        android:padding="@dimen/board_outline_borders_thickness"
        android:background="@color/black"
        />

    
</RelativeLayout>